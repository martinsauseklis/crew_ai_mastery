# AI Mastery Platform - Environment Configuration

# LLM API Keys - BOTH are required for maximum quality configuration!
# GPT-4 is used for 6 technical agents (AI SME, engineers, PM)
# Claude-3-Opus is used for 7 educational/creative agents (curriculum, design, QA)
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# LLM Configuration
DEFAULT_LLM_PROVIDER=openai  # Options: openai, anthropic
DEFAULT_MODEL=gpt-4  # Used as fallback if agent doesn't specify

# Crew Configuration
CREW_VERBOSE=true  # Show detailed crew execution logs
MAX_ITERATIONS=15  # Maximum iterations for agent reasoning

# Logging
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
